{
	"name": "the-module",
	"version": "0.0.0",
	"description": "My awesome module.",
	"repository": "https://github.com/Richienb/the-module.git",
	"author": "Richie Bendall <richiebendall@gmail.com>",
	"license": "MIT",
	"main": "index.js",
	"files": [
		"index.js",
		"index.d.ts"
	],
	"engines": {
		"node": ">=8"
	},
	"scripts": {
		"lint": "xo && clang-format -style=\"{UseTab: 'ForIndentation', TabWidth: 4, IndentWidth: 4,BasedOnStyle: 'google'}\" -i index.cc",
		"test": "yarn lint && ava",
		"build": "node-pre-gyp rebuild",
		"publish": "node-pre-gyp rebuild && node-pre-gyp package && node-pre-gyp-github package"
	},
	"keywords": [],
	"dependencies": {
		"bindings": "^1.5.0",
		"node-addon-api": "^2.0.0",
		"node-pre-gyp": "^0.14.0"
	},
	"devDependencies": {
		"ava": "^2.4.0",
		"clang-format": "^1.3.0",
		"eslint-config-richienb": "^0.3.0",
		"node-pre-gyp-github": "^1.4.3",
		"xo": "^0.25.3"
	},
	"resolutions": {
		"eslint": "^6.8.0"
	},
	"xo": {
		"extends": "richienb/node"
	},
	"binary": {
		"module_name": "the-module",
		"module_path": "./lib/binding/{configuration}/{node_abi}-{platform}-{arch}/",
		"package_name": "{module_name}-v{version}-{node_abi}-{platform}-{arch}.tar.gz",
		"host": "https://github.com/Richienb/the-module/releases/download/",
		"remote_path": "{version}"
	}
}
